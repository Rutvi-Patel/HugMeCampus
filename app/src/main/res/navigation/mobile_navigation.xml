<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.diamondTierHuggers.hugMeCampus.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_matchmaking"
        android:name="com.diamondTierHuggers.hugMeCampus.MatchMakingFragment"
        android:label="@string/menu_matchmaking"
        tools:layout="@layout/fragment_match_making" />

    <fragment
        android:id="@+id/editUserProfile"
        android:name="com.diamondTierHuggers.hugMeCampus.EditUserProfile"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_edit_user_profile" >
        <action
            android:id="@+id/editUserProfile_to_EditProfile"
            app:destination="@id/editProfile" />
    </fragment>

    <fragment
        android:id="@+id/editProfile"
        android:name="com.diamondTierHuggers.hugMeCampus.EditProfile"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/editProfile_to_editUserProfile"
            app:destination="@id/editUserProfile" />
    </fragment>

    <fragment
        android:id="@+id/nav_list_tabs"
        android:name="com.diamondTierHuggers.hugMeCampus.ListTabsFragment"
        android:label="@string/menu_list"
        tools:layout="@layout/fragment_list_tabs" >
        <action
            android:id="@+id/action_nav_list_tabs_to_nav_other_profile"
            app:destination="@id/nav_other_profile" />
    </fragment>

    <fragment
        android:id="@+id/nav_search"
        android:name="com.diamondTierHuggers.hugMeCampus.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search" >
    </fragment>

    <fragment
        android:id="@+id/nav_other_profile"
        android:name="com.diamondTierHuggers.hugMeCampus.ViewOtherProfileFragment"
        android:label="Other Profile"
        tools:layout="@layout/fragment_view_other_profile" />

    <fragment
        android:id="@+id/nav_chat"
        android:name="com.diamondTierHuggers.hugMeCampus.messages.chatFragment"
        android:label="@string/menu_chat"
        tools:layout="@layout/fragment_chat" >
    </fragment>
</navigation>