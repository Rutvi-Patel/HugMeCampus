<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.diamondTierHuggers.hugMeCampus.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.diamondTierHuggers.hugMeCampus.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_matchmakingUI"
            app:destination="@id/matchmakingUI"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_SecondFragment_to_displayUserProfile2"
            app:destination="@id/displayUserProfile2" />
    </fragment>
    <activity
        android:id="@+id/matchmakingUI"
        android:name="com.diamondTierHuggers.hugMeCampus.MatchmakingUI"
        android:label="activity_matchmaking_ui"
        tools:layout="@layout/activity_matchmaking_ui" />
    <fragment
        android:id="@+id/displayUserProfile2"
        android:name="com.diamondTierHuggers.hugMeCampus.DisplayUserProfile"
        android:label="fragment_display_user_profile"
        tools:layout="@layout/fragment_display_user_profile" />
</navigation>