<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.diamondTierHuggers.hugMeCampus.RegisterFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.diamondTierHuggers.hugMeCampus.LoginFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_profileFragment4"
            app:destination="@id/profileFragment4" />
        <action
            android:id="@+id/action_SecondFragment_to_ForgotActivity"
            app:destination="@id/ForgotActivity" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment4"
        android:name="com.diamondTierHuggers.hugMeCampus.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <activity
        android:id="@+id/ForgotActivity"
        android:name="com.diamondTierHuggers.hugMeCampus.MainActivity"
        android:label="activity_forgot"
        tools:layout="@layout/activity_forgot" />
</navigation>