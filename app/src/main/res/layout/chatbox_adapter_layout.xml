<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/oppLayout"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp">
            <TextView
                android:id="@+id/opponentMsg"
                android:padding="20dp"
                android:background="@drawable/chat_msg_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="opponent message"/>
            <TextView
                android:id="@+id/oppTime"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/myLayout"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp">
            <TextView
                android:id="@+id/myMsg"
                android:padding="20dp"
                android:background="@drawable/my_chat_msg_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="my message"/>
            <TextView
                android:layout_gravity="end"
                android:id="@+id/myTime"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>